datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  admin
  user
}

model User {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  username    String   @unique
  email       String   @unique
  password    String
  role        Role     @default(user)
}